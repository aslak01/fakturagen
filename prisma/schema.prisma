// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meta {
  uid        String  @id @default(cuid())
  locale     String
  vatEnabled Boolean
  vatRate    Int
  companyId  String  @unique
  company    Company @relation(fields: [companyId], references: [uid])
}

model Address {
  uid       String   @id @default(cuid())
  companyId String   @unique
  company   Company  @relation(fields: [companyId], references: [uid])
  street    String
  poNo      String
  city      String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  uid       String    @id @default(cuid())
  name      String
  addressId String?   @unique
  address   Address?
  currency  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  banks     Bank[]
  invoices  Invoice[]
  Meta      Meta?
}

model Bank {
  uid       String  @id @default(cuid())
  accno     String
  iban      String
  bic       String
  name      String
  companyId String  @unique
  company   Company @relation(fields: [companyId], references: [uid])
}

model Invoice {
  number    Int           @unique
  uid       String        @id @default(cuid())
  companyId String
  date      DateTime      @default(now())
  dueDate   DateTime
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  lines     InvoiceLine[]
  company   Company       @relation(fields: [companyId], references: [uid])
}

model InvoiceLine {
  uid                    String   @id @default(cuid())
  date                   String
  description            String
  value                  Int
  currency               String
  currValueAtInvoiceTime Int
  hasVat                 Boolean  @default(true)
  vatSum                 Int
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  invoiceId              String   @unique
  invoice                Invoice  @relation(fields: [invoiceId], references: [uid])
}
