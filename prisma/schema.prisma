// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meta {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [uid])
  companyId String   @unique

  locale     String
  vatEnabled Boolean
  vatRate    Int
}

model Address {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [uid])
  companyId String   @unique

  street  String
  poNo    String
  city    String
  country String
}

model Company {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String
  currency String
  banks    Bank[]
  invoices Invoice[]
  address  Address?
  Meta     Meta?
}

model Bank {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [uid])
  companyId String   @unique

  accno String
  iban  String
  bic   String
  name  String
}

model Invoice {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company   Company  @relation(fields: [companyId], references: [uid])
  companyId String

  number    Int           @unique
  date      DateTime      @default(now())
  dueDate   DateTime
  lines     InvoiceLine[]
  paid      Boolean
  sumPaid   Int
  currValue Float?
}

model InvoiceLine {
  uid       String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  invoice   Invoice  @relation(fields: [invoiceId], references: [uid])
  invoiceId String   @unique

  doneDate    String?
  description String
  value       Float
  currency    String?
  hasVat      Boolean @default(true)
  vatAmt      Float?
}
