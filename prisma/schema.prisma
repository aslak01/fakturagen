// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Meta {
  uid        String  @id @default(cuid())
  locale     String
  vatEnabled Boolean
  vatRate    Int
  companyId  String  @unique
  company    Company @relation(fields: [companyId], references: [uid])
}

model Address {
  uid       String   @id @default(cuid())
  companyId String   @unique
  company   Company  @relation(fields: [companyId], references: [uid])
  street    String
  poNo      String
  city      String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Company {
  uid       String    @id @default(cuid())
  name      String
  addressId String?   @unique
  address   Address?
  currency  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  banks     Bank[]
  invoices  Invoice[]
  Meta      Meta?
}

model Bank {
  uid       String  @id @default(cuid())
  accno     String
  iban      String
  bic       String
  name      String
  companyId String  @unique
  company   Company @relation(fields: [companyId], references: [uid])
}

model Invoice {
  uid                    String        @id @default(cuid())
  createdAt              DateTime      @default(now())
  updatedAt              DateTime      @updatedAt
  number                 Int           @unique
  lines                  InvoiceLine[]
  date                   DateTime      @default(now())
  dueDate                DateTime
  company                Company       @relation(fields: [companyId], references: [uid])
  companyId              String
  paid                   Boolean
  sumPaid                Int
  currValueAtInvoiceTime Int?
}

model InvoiceLine {
  uid         String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  doneDate    String?
  description String
  value       Int
  currency    String?
  hasVat      Boolean  @default(true)
  vatAmt      Int?
  invoice     Invoice  @relation(fields: [invoiceId], references: [uid])
  invoiceId   String   @unique
}
